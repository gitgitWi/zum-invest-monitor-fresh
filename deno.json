{
  "tasks": {
    "start": "deno run -A --watch=static/,routes/ dev.ts"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": {
    "files": {
      "include": ["components/", "constants/", "islands/", "routes/"]
    },
    "options": {
      "indentWidth": 2,
      "lineWidth": 90,
      "singleQuote": true,
      "useTabs": false,
      "proseWrap": "preserve"
    }
  }
}
